<h1>Books</h1>
<table>
<tr>
  <th>Title</th>
  <th>Body</th>
</tr>
<% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to 'Show', book_path(book.id) %></td>
    <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
    <td><%= link_to 'Destroy', books_path %></td>
  </tr>
<% end %>
</table>

<%= form_with model: @book, url: '/books', method: :post do |f| %>

  <h2>New book</h2>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>

<% end %>
